@model CrudMasterDetail.ViewModels.InvoiceDetailsViewModels


@{
    ViewData["Title"] = "Create";
}

<h1>Crear Detalles</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                @*<input asp-for="CustomerId" class="form-control" />*@
                @Html.DropDownListFor(t => t.CustomerId, new SelectList(ViewBag.Lista, "Value", "Text"), "Select Type")
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Total" class="control-label"></label>
                <input asp-for="Total" class="form-control" />
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>


            <table class="table table-striped table-bordered bulk_action">
                <th>Item</th>
                <th>Qty</th>


                @for (int i = 0; i < Model.InvoiceDetails.Count; i++)
                {
            <tr>
                <td>
                    <input asp-for="@Model.InvoiceDetails[i].Qty" class="form-control" />

                </td>
                <td>

                    <input asp-for="@Model.InvoiceDetails[i].Price" class="form-control" />
                </td>

                <td>

                    <input asp-for="@Model.InvoiceDetails[i].TotalItbis" class="form-control" />
                </td>
                <td>

                    <input asp-for="@Model.InvoiceDetails[i].SubTotal" class="form-control" />
                </td>
                <td>
                    <input asp-for="@Model.InvoiceDetails[i].Total" class="form-control" />
                </td>

            </tr>
                }
            </table>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



